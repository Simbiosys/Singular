<table class="tabla-notas">
  <tbody>
    {{#data}}
      <tr>
        <td>
          {{#notas_traducciones}}
            <div class="{{idioma_habilitado idioma}}">
              {{mensaje}}
            </div>
          {{/notas_traducciones}}
        </td>
        <td>{{notas.creacion}}</td>
        <td class="acciones">
          <a href="{{@root.page.host}}/notas/{{notas.id}}" class="btn-editar">
            <i class="fa fa-pencil-square-o"></i>
          </a>
        </td>
        <td class="acciones">
          <a href="{{@root.page.host}}/notas/{{notas.id}}/borrar" class="btn-borrar">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    {{/data}}
  </tbody>
</table>
